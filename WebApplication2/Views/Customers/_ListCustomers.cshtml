@model List<WebApplication2.Models.ListCustomers>
<div>
    <table class="table shadow rounded table-hover">
        <thead class="text-center">
            <tr class="table-primary">
                <th>

                </th>
                <th>
                    Action
                </th>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Post Code
                </th>
                <th>
                    Height
                </th>
            </tr>

        </thead>
        <tbody class="text-center">
            @foreach (var values in Model)
            {
                <tr>
                    <td>
                        <input type="radio" class="form-check-input" name="selectedIds" value="@values.ListCustomerId" onchange="enableEditButton(this)" />
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { Id = values.ListCustomerId })" class="btn btn-warning btn-sm edit-button disabled">Edit</a>
                    </td>
                    <td>
                        @values.ListName
                    </td>
                    <td>
                        @values.ListAge
                    </td>
                    <td>
                        @values.ListPostCode
                    </td>
                    <td>
                        @values.ListHeight
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script>
    function enableEditButton(radio) {
        var editButton = $(radio).closest('tr').find('.edit-button');
        if ($(radio).is(':checked')) {
            $('input[name="selectedIds"]:not(:checked)').closest('tr').find('.edit-button').addClass('disabled');
            editButton.removeClass('disabled');
        } else {
            editButton.addClass('disabled');
        }
    }
</script>








