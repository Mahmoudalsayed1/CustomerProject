@model WebApplication2.Models.Customer;



@using (Html.BeginForm("CreateCustomer", "Customers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.CustomerId)
    <div id="CustomerModel" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                    <h5 class=" card-header bg-primary text-white text-center">@ViewData["Title"]</h5>
                    <div class="card-body">

                            <div class="form-group row">
                                <div class="row mb-3">
                                    <label for="Name" class="col-sm-5 col-lg-4 col-form-label">Name <span class="text-danger">*</span></label>
                                    <div class="col-sm-12 col-lg-12">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control ", placeholder = "Enter Name" ,id="Name"})
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="row mb-3">
                                    <label for="Age" class="col-sm-5 col-lg-4 col-form-label">Age <span class="text-danger">*</span></label>

                                    <div class="col-sm-12 col-lg-12">
                                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control ", placeholder = "Enter Age",id="Age" ,type = "number", step = "1"})
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="row mb-3">
                                    <label for="PostCode" class="col-sm-5 col-lg-4 col-form-label">PostCode<span class="text-danger">*</span></label>
                                    <div class="col-sm-12 col-lg-12">
                                        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control ", placeholder = "Enter Post Code.",id="PostCode" })
                                    </div>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="row mb-3">
                                <label for="Height" class="col-sm-5 col-lg-4 col-form-label">Height<span class="text-danger">*</span></label>
                                    <div class="col-sm-12 col-lg-12">
                                        @Html.TextBoxFor(m => m.Height, new { @class = "form-control ", placeholder = "Enter Hight." ,id="Height",type = "number", step = "0.01"})
                                    </div>

                                </div>
                            </div>

                            <div class="text-center">


                                <input type="submit" id="Submit" value="OK" class="btn btn-success m-4 col-2" />
                                <a href="@Url.Action("Index")" class="btn btn-danger m-4 col-lg-2 col-sm-3 col-xs-3">Cancel</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
}



<script type="text/javascript">
    
    $(function () {
        $('#Submit').prop('disabled', true)
        $('input').on('input', function () {
            var name = $('#Name').val().trim();
            var age = $('#Age').val().trim();
            var postCode = $('#PostCode').val().trim();
            var height = $('#Height').val().trim();
            var postCodeRegex = /^(?=.*\d)(?=.*[a-zA-Z]).+$/;
            if (name.length <= 50 && name.length > 0 && age >= 0 && age <= 110 && age.length > 0 && postCodeRegex.test(postCode) && height >= 0 && height <= 2.5 && height.length > 0) {
                $('#Submit').prop('disabled', false);
            } else {
                $('#Submit').prop('disabled', true);
            }
        });
    });

</script>



